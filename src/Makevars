CC=gcc
CXX=g++
SHLIB_CXXLD=g++

PKG_CXXFLAGS = -c -g -O3 -Wall -fPIC -pedantic -pipe -Wno-unused -std=c++11
PKG_CPPFLAGS = "-I../inst/include" "-I./parser/build"
PKG_LIBS = "parser/ado.a"

all: parser $(SHLIB)

parser:
	(cd parser; make -d -f Makefile DEBUG=T KEEP_PKG_SOURCE=yes)

.PHONY: all parser

